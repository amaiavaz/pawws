<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    >
    <title>Pawws</title>
    <%- include('modules/globalLinks') %>
    <link rel="stylesheet" href="/stylesheets/ownerSignup.css">
  </head>

  <body>
    <%-include('modules/navbar') %>

      <main>
        <div class="backgradient">
          <div class="container">
            <section class="section-form py-5">
              <div class="row justify-content-around">
                <div class="col-5">
                  <section class="bg-white rounded-4 p-3 shadow-sm">
                    <form action="/owners/signup" method="post">
                      <h2>Formulario de registro</h2>
                      <div class="row mb-4">
                        <div class="col">
                          <div
                          data-mdb-input-init
                          class="form-outline"
                          >
                          <label
                          class="form-label"
                          for="first_name"
                          >Nombre</label>
                          <input
                            type="text"
                            id="first_name"
                            class="form-control"
                            name="first_name"
                          />
                          </div>
                        </div>
                        <div class="col">
                          <div
                            data-mdb-input-init
                            class="form-outline"
                          >
                            <label
                              class="form-label"
                              for="last_name"
                            >Apellidos</label>
                            <input
                              type="text"
                              id="last_name"
                              class="form-control"
                              name="last_name"
                            />
                          </div>
                        </div>
                      </div>

                      <div
                        data-mdb-input-init
                        class="form-outline mb-4"
                      >
                        <label
                          class="form-label"
                          for="description"
                        >Descripción</label>
                        <input
                          type="text"
                          id="description"
                          class="form-control"
                          name="owner_description"
                        />
                      </div>

                      <div
                        data-mdb-input-init
                        class="form-outline mb-4"
                      >
                        <label
                          class="form-label"
                          for="phone"
                        >Teléfono</label>
                        <input
                          type="text"
                          id="phone"
                          class="form-control"
                          name="phone_number"
                        />
                      </div>
                      
                      <div
                        data-mdb-input-init
                        class="form-outline mb-4"
                      >
                        <label
                        class="form-label"
                        for="email"
                        >Email</label>
                        <input
                          type="text"
                          id="email"
                          class="form-control"
                          name="email"
                        />
                      </div>
                      
                      <div
                        data-mdb-input-init
                        class="form-outline mb-4"
                      >
                        <label
                          class="form-label"
                          for="password"
                        >Contraseña</label>
                        <input
                          type="password"
                          id="password"
                          class="form-control"
                          name="password"
                        />
                      </div>
                      <p class="error"><%= typeof message != 'undefined' ? message : null %></p>
                      <button
                        data-mdb-ripple-init
                        class="btn btn-block mb-4 w-100 btn-sign"
                      >Regístrate</button>
                      <p class="text-center">¿Ya estás registrado? <a href="/owners/login">Inicia sesión aquí</a></p>
                    </form>
                  </section>
                </div>
                <div class="col-5">
                  <img class="w-100 rounded-4 shadow-sm" src="/images/assets/img02.jpg" alt="">
                </div>
              </div>
            </section>
          </div>
        </div>
      </main>

      <%- include('modules/footer') %>

        <script
          src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
          crossorigin="anonymous"
        ></script>
  </body>

</html>