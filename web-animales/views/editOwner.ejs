<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    >
    <title>Pawws</title>
    <%- include('modules/globalLinks') %>
    <link rel="stylesheet" href="/stylesheets/editOwner.css">
  </head>

  <body>
    <%- include('modules/navbar') %>

    <main>
      <div class="background">
        <div class="container">
          <section class="py-5 m-auto section-form">
            <form 
              action="/owners/edit/<%=result.owner_id %>"
              method="post"
              enctype="multipart/form-data"
            >
              <h2 class="mb-4">Edita tus datos</h2>
              <div class="d-flex flex-column gap-2">
                <label for="first_name">Nombre:</label>
                <input 
                  type="text" 
                  id="first_name" 
                  name="first_name"
                  value="<%= result.first_name %>"
                >
              </div>
              <div class="d-flex flex-column gap-2">
                <label for="last_name">Apellidos:</label>
                <input 
                  type="text" 
                  id="last_name" 
                  name="last_name"
                  value="<%= result.last_name %>"
                >
              </div>
              <div class="d-flex flex-column gap-2">
                <label for="description">Descripción:</label>
                <input 
                  type="text" 
                  id="description" 
                  name="owner_description"
                  value="<%= result.owner_description %>"
                >
              </div>
              <div class="d-flex flex-column gap-2">
                <label for="phone">Teléfono:</label>
                <input 
                  type="text" 
                  id="phone" 
                  name="phone_number"
                  value="<%= result.phone_number %>"
                >
              </div>
              <div class="d-flex flex-column gap-2">
                <label for="img">Cambia la imagen</label>
                <input 
                  type="file" 
                  id="img" 
                  name="img"
                  hidden
                >
              </div>
              <div class="mt-3">
                <button class="button" type="submit">Aceptar</button>
                <button class="button" type="button" onclick="window.location.href='/owners/oneOwnerLogin/<%=result.owner_id %>'">Cancelar</button>
              </div>
            </form>
          </section>
        </div>
      </div>
    </main>

    <%- include('modules/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
      crossorigin="anonymous"
    ></script>
  </body>

</html>