<!doctype html>
<html lang="es">

  <head>
    <meta charset="utf-8">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    >
    <title>Pawws</title>
    <%- include('modules/globalLinks') %>
    <link rel="stylesheet" href="/stylesheets/ownerProfileLogin.css">
  </head>

  <body>
    <%- include('modules/navbar') %>

    <main>
      <div class="background">
        <section class="py-5 section-owner">
          <div class="container">
            <section>
              <div class="row justify-content-center">
                <div class="col-9 col-md-5 col-lg-4">
                  <div>
                    <img class="w-100 rounded-4" src="/images/owners/<%= resultFinal.owner_img?resultFinal.owner_img:'defaultImg.png' %>" alt="Perfil">
                  </div>
                </div>
                <div class="col-9 col-md-5 col-lg-4 d-flex flex-column justify-content-around">
                  <div class="p-3">
                    <p class="fw-bold mb-0">Nombre:</p>
                    <h3><%= resultFinal.first_name %> <%= resultFinal.last_name %></h3>
                    <p class="fw-bold mb-0">Descripción:</p>
                    <p><%= resultFinal.owner_description %></p>
                    <p class="fw-bold mb-0">Teléfono:</p>
                    <p><%= resultFinal.phone_number %></p>
                    <p class="fw-bold mb-0">Email:</p>
                    <p><%= resultFinal.email %></p>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </section>
        <div class="container">
          <div class="divisor-line"></div>
        </div>
        <section class="section-pets py-5">
          <div class="container">
            <div class="row g-4 justify-content-center justify-content-lg-start">
              <% resultFinal.pets.forEach((elem) => { %>
                <div class="col-10  col-lg-6">
                  <div class="card mb-3 h-100" >
                    <div class="row g-0 h-100">
                      <div class="col-md-8">
                        <img src="/images/pets/<%=elem.pet_img?elem.pet_img:'defaultImg.webp' %>" class="img-fluid rounded-4 h-100 object-fit-cover" alt="">
                      </div>
                      <div class="col-md-4 d-flex align-items-center">
                        <div class="card-body">
                          <h3 class="card-title"><%= elem.pet_name %></h3>
                          <p class="card-text"><%= elem.pet_description %></p>
                          <p class="card-text"><%= elem.species %></p>
                          <p class="card-text mb-0"><small class="text-body-secondary">Año de adopción:</small></p>
                          <p class="card-text"><%= elem.adoption_year %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              <% }); %>
            </div>
          </div>
        </section>
      </div>
    </main>

    <%- include('modules/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
      crossorigin="anonymous"
    ></script>
  </body>

</html>