<!doctype html>
<html lang="es">

  <head>
    <meta charset="utf-8">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    >
    <title>Pawws</title>
    <%- include('modules/globalLinks') %>
    <link rel="stylesheet" href="/stylesheets/ownerProfileLogin.css">
  </head>

  <body>
   
    <header class="web-header px-1">
      <div class="container">
        <nav class="navbar navbar-expand-lg d-flex justify-content-between align-items-center py-3">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
            aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse justify-content-between " id="navbarContent">
              <ul class="d-flex gap-4 mb-0 p-0 align-items-center nav-ul">
                <li><a href="/">PAWWS</a></li>
                <li><a class="fw-bold" href="/">Home</a></li>
                <li><a class="fw-bold" href="/about">Sobre nosotros</a></li>
                <li><a class="fw-bold" href="/pets/allPets">Las Mascotas</a></li>
                <li><a class="fw-bold" href="/pets/newPetSelect">Registrar mascota</a></li>
              </ul>
            </div>
            
        </nav>
      </div>
    </header>

    <main>
      <div class="background">
        <section class="py-5 section-owner">
          <div class="container">
            <section>
              <div class="row justify-content-center">
                <div class="col-9 col-md-5 col-lg-4">
                  <h2>Hola, <%= resultFinal.first_name %>!</h2>
                  <div>
                    <img class="w-100 rounded-4" src="/images/owners/<%= resultFinal.owner_img?resultFinal.owner_img:'defaultImg.png' %>" alt="Perfil">
                  </div>
                </div>
                <div class="col-9 col-md-5 col-lg-4 d-flex flex-column justify-content-around">
                  <div class="p-3">
                    <p class="fw-bold mb-0">Nombre:</p>
                    <h3><%= resultFinal.first_name %> <%= resultFinal.last_name %></h3>
                    <p class="fw-bold mb-0">Descripción:</p>
                    <p><%= resultFinal.owner_description %></p>
                    <p class="fw-bold mb-0">Teléfono:</p>
                    <p><%= resultFinal.phone_number %></p>
                    <p class="fw-bold mb-0">Email:</p>
                    <p><%= resultFinal.email %></p>
                  </div>
                  <div>
                    <button class="button mx-2" onclick="window.location.href='/owners/edit/<%=resultFinal.owner_id %>'">Editar</button>
                    <button class="button mx-2" onclick="window.location.href='/pets/newPet/<%=resultFinal.owner_id %>'">Añadir mascota</button>
                    <button class="button mx-2 my-3" onclick="window.location.href='/owners/deleteLogic/<%=resultFinal.owner_id %>'">Eliminar perfil</button>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </section>
        <div class="container">
          <div class="divisor-line"></div>
        </div>
        <section class="section-pets py-5">
          <div class="container">
            <div class="row justify-content-center justify-content-lg-start g-4">
              <% resultFinal.pets.forEach((elem) => { %>
                <div class="col-10  col-lg-6">
                  <div class="card mb-3 h-100" >
                    <div class="row g-0 h-100">
                      <div class="col-md-8">
                        <img src="/images/pets/<%=elem.pet_img?elem.pet_img:'defaultImg.webp' %>" class="img-fluid rounded-4 h-100 object-fit-cover" alt="">
                      </div>
                      <div class="col-md-4 d-flex align-items-center">
                        <div class="card-body">
                          <h3 class="card-title"><%= elem.pet_name %></h3>
                          <p class="card-text"><%= elem.pet_description %></p>
                          <p class="card-text"><%= elem.species %></p>
                          <p class="card-text mb-0"><small class="text-body-secondary">Año de adopción:</small></p>
                          <p class="card-text"><%= elem.adoption_year %></p>
                          <div class="mt-2">
                            <a class="fw-bold text-decoration-underline me-2" href="/pets/edit/<%=elem.pet_id %>">Editar</a>
                            <a class="fw-bold text-decoration-underline mx-2 mx-lg-0 mx-xl-2" href="/pets/deleteTotal/<%=elem.pet_id %>/<%=elem.owner_id %>">Eliminar</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              <% }); %>
            </div>
          </div>
        </section>

        
      </div>
    </main>

    <%- include('modules/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
      crossorigin="anonymous"
    ></script>
  </body>

</html>