<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    >
    <title>Pawws</title>
    <%- include('modules/globalLinks') %>
    <link rel="stylesheet" href="/stylesheets/ownerProfileLogin.css">
  </head>

  <body>
    <%- include('modules/navbar') %>

    <main>
      <div class="background">
        <section class="py-5 section-owner">
          <div class="container">
            <section>
              <div class="row justify-content-center">
                <div class="col-4">
                  <h2>Hola, <%= resultFinal.first_name %>!</h2>
                  <div>
                    <img class="w-100 rounded-4" src="/images/owners/<%= resultFinal.owner_img?resultFinal.owner_img:'defaultImg.png' %>" alt="Perfil">
                  </div>
                </div>
                <div class="col-6 d-flex flex-column justify-content-around">
                  <div class="p-3">
                    <p class="fw-bold mb-0">Nombre:</p>
                    <h3><%= resultFinal.first_name %> <%= resultFinal.last_name %></h3>
                    <p class="fw-bold mb-0">Descripción:</p>
                    <p><%= resultFinal.owner_description %></p>
                    <p class="fw-bold mb-0">Teléfono:</p>
                    <p><%= resultFinal.phone_number %></p>
                    <p class="fw-bold mb-0">Email:</p>
                    <p><%= resultFinal.email %></p>
                  </div>
                  <div>
                    <button class="button mx-2" onclick="window.location.href='/owners/edit/<%=resultFinal.owner_id %>'">Editar</button>
                    <button class="button mx-2" onclick="window.location.href='/pets/newPet/<%=resultFinal.owner_id %>'">Añadir mascota</button>
                    <button class="button mx-2">
                      Eliminar perfil
                    </button>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </section>
      </div>
    </main>

    <%- include('modules/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
      crossorigin="anonymous"
    ></script>
  </body>

</html>